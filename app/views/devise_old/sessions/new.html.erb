
<style type="text/css">
  body {
    background:none;
    padding-top: 30px;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4" style="margin-top:100px">
      <div class="block-unit" style="text-align:center; padding:8px 8px 8px 8px;">
        <%= image_tag "face80x80.jpg",{:class => 'img-circle'} %>
        <br><br>
         <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "cmxform",:id =>'signupForm') do |f| %>
          <fieldset>
            <p>
              <%= f.email_field( :email, {:autofocus => true,:placeholder => 'Username'}) %>
              <%= f.password_field :password,{:placeholder => 'Password'} %>
            </p>
            <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end -%>
            <%= f.submit "Sign in",{:class => 'submit btn-success btn btn-large'} %>
          </fieldset>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
